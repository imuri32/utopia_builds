<div class="col">
  <div class="card mb-2" style="width: 18rem;">
    <div class="card-body">
      <% if product.image.present? %>
        <%= image_tag product.image, class: "card-img-top mb-2" %>
      <% end %>
      <h5 class="card-title"><%= link_to product.name, product %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%=product.product_type.name %></h6>
      <a href="#" class="card-link">**Add Buy Button Here**</a>
    </div>
    <div class="card-footer">
      <%=number_to_currency(product.price)%>
    </div>
  </div>
</div>
